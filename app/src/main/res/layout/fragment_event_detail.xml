<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000000"
                android:orientation="vertical"
                android:padding="30dp">

                <TextView
                    android:id="@+id/eventDateTV"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:fontFamily="@font/bunjee"
                    android:gravity="center"
                    android:text="09  "
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />

                <TextView
                    android:id="@+id/eventMonthTV"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="#000000"
                    android:fontFamily="@font/bunjee"
                    android:gravity="center"
                    android:text="Dec"
                    android:textColor="#FFFFFF"
                    android:textSize="30sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#00BCD4">

                <TextView
                    android:id="@+id/eventNameTV"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFFFFF"
                    android:fontFamily="@font/bunjee"
                    android:gravity="center"
                    android:text="Event Name"
                    android:textColor="#000000"
                    android:textColorHint="#FDFDFD"
                    android:textSize="32sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <!--                <LinearLayout-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:orientation="vertical" />-->
                <TextView
                    android:id="@+id/eventDescTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/machaanDesc"
                    android:gravity="center"
                    android:padding="20dp"/>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal"
            >

            <Button
                android:id="@+id/eventRegisterButton"
                android:layout_width="291dp"
                android:layout_height="57dp"
                android:background="#100202"
                android:fontFamily="@font/bunjee"
                android:text="register"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textColorHighlight="#000000"
                android:textColorLink="#000000"
                android:onClick="showToast"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/bellIconIV"
                android:layout_width="wrap_content"
                android:layout_height="57dp"
                android:layout_weight="1"
                android:background="@color/colorPrimary"
                android:src="@drawable/bell1" />


        </LinearLayout>
    </LinearLayout>
</FrameLayout>